<?xml version="1.0" encoding="UTF-8"?>
<assembly>

    <id>distribution</id>

    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <!--
         | copy server scripts
        -->
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <!--
         | copy service scripts
        -->
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>orientdb.service</include>
                <include>orientdb.upstart</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>


        <!--
         | copy etl scripts
        -->
        <fileSet>
            <directory>${basedir}/../etl/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../etl/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | copy tools scripts
        -->
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | copy distributed scripts
        -->
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>


        <!--
         | configurations
        -->
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../etl/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../server/config/cert</directory>
            <outputDirectory>config/cert</outputDirectory>
        </fileSet>

        <!--
         | Plugins
        -->
        <fileSet>
            <directory>${basedir}/plugins</directory>
            <outputDirectory>plugins</outputDirectory>
        </fileSet>

        <!--
         | Web part
        -->
        <fileSet>
            <directory>${basedir}/../server/src/site</directory>
            <outputDirectory>www</outputDirectory>
        </fileSet>

        <!--
         | creates an empty log directory
        -->
        <fileSet>
            <directory>${basedir}/../server/config</directory>
            <outputDirectory>log</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>

        <!--
         | copy databases directory
        -->
        <fileSet>
            <directory>${basedir}/target/databases</directory>
            <outputDirectory>databases</outputDirectory>
        </fileSet>
    </fileSets>

    <!--
     | includes legals
    -->
    <files>
        <file>
            <source>${basedir}/../license.txt</source>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>${basedir}/../history.txt</source>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>${basedir}/../readme.txt</source>
            <fileMode>444</fileMode>
        </file>
    </files>

    <!--
     | all artifacts in a /lib dir
    -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
            <excludes>
                <exclude>*:ant:*</exclude>
                <exclude>*:ant-launcher:*</exclude>
                <exclude>*:ivy:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>*:zip:*</include>
            </includes>
            <excludes>
                <exclude>*:ant:*</exclude>
                <exclude>*:ant-launcher:*</exclude>
                <exclude>*:ivy:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
