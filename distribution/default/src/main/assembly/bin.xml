<?xml version="1.0" encoding="UTF-8"?>
<assembly>

    <id>distribution</id>

    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <!--
         | copy benchmarks scripts
        -->
        <fileSet>
            <directory>${basedir}/../../server/benchmarks</directory>
            <outputDirectory>benchmark</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../server/benchmarks</directory>
            <outputDirectory>benchmark</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | copy server scripts
        -->
        <fileSet>
            <directory>${basedir}/../../server/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../server/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | copy tools scripts
        -->
        <fileSet>
            <directory>${basedir}/../../tools/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../tools/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | copy distributed scripts
        -->
        <fileSet>
            <directory>${basedir}/../../distributed/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../distributed/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <!--
         | configurations
        -->
        <fileSet>
            <directory>${basedir}/../../server/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../tools/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../distributed/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>

        <!--
         | Plugins
        -->
        <fileSet>
            <directory>${basedir}/../../server/plugins</directory>
            <outputDirectory>plugins</outputDirectory>
        </fileSet>

        <!--
         | Web part
        -->
        <fileSet>
            <directory>${basedir}/../../server/src/site</directory>
            <outputDirectory>www</outputDirectory>
        </fileSet>

        <!--
         | creates an empty log directory
        -->
        <fileSet>
            <directory>${basedir}/../../server/config</directory>
            <outputDirectory>log</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>

        <!--
         | creates an empty databases directory
        -->
        <fileSet>
            <directory>${basedir}/../../server/config</directory>
            <outputDirectory>databases</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <!--
     | includes legals
    -->
    <files>
        <file>
            <source>${basedir}/../../license.txt</source>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${basedir}/../../history.txt</source>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${basedir}/../../readme.txt</source>
            <fileMode>644</fileMode>
        </file>
    </files>

    <!--
     | all artifacts in a /lib dir
    -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*:pom</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
