  <modules>
    <module>client</module>
    <module>commons</module>
    <module>nativeos</module>
    <module>core</module>
    <module>distribution</module>
    <module>enterprise</module>
    <module>object</module>
    <module>server</module>
    <module>tools</module>
    <module>tests</module>
